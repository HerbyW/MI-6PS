<PropertyList>
  <fx>
    
    <engine>
      <name>Start engines</name>
      <mode>once</mode>
      <path>Aircraft/MI-6PS/Sound/turbine-start.wav</path>
      <condition>
	<and>
          <greater-than>
            <property>sim/multiplay/generic/int[4]</property>
            <value>0</value>
          </greater-than>
	  <less-than>
            <property>sim/multiplay/generic/int[4]</property>
            <value>5</value>
          </less-than>  
	  </and>
      </condition>
      <volume>
        <factor>0.6</factor>
      </volume>
      <reference-dist>100</reference-dist>
      <max-dist>2000</max-dist>
    </engine>
    
    <engine>
      <name>Turbine external</name>
      <mode>looped</mode>
      <path>Aircraft/MI-6PS/Sound/turbine-loop.wav</path>
      <condition>
        <and>
          <equals>
            <property>sim/multiplay/generic/int[4]</property>
            <value>4</value>
          </equals>
          <equals>
          <property>/sim/current-view/internal</property>
	  <value>false</value>
          </equals>
        </and>
      </condition>
      <volume>
        <factor>0.6</factor>
      </volume>
      <reference-dist>100</reference-dist>
      <max-dist>2000</max-dist>
    </engine>
    
    <engine>
      <name>Turbine internal</name>
      <mode>looped</mode>
      <path>Aircraft/MI-6PS/Sound/turbine-loop.wav</path>
      <condition>
        <and>
          <equals>
            <property>sim/multiplay/generic/int[4]</property>
            <value>4</value>
          </equals>
          <equals>
          <property>/sim/current-view/internal</property>
	  <value>true</value>
          </equals>
        </and>
      </condition>
      <volume>
        <factor>0.12</factor>
      </volume>
      <reference-dist>50</reference-dist>
      <max-dist>200</max-dist>
    </engine>
    
    <engine>
      <name>Shutdown external</name>
      <mode>once</mode>
      <path>Aircraft/MI-6PS/Sound/turbine-stop.wav</path>
      <condition>
        <and>
          <equals>
            <property>sim/multiplay/generic/int[4]</property>
            <value>0</value>
          </equals>
	  <greater-than>
            <property>rotors/main/rpm</property>
            <value>96</value>
          </greater-than>
          <equals>
          <property>/sim/current-view/internal</property>
	  <value>false</value>
          </equals>
        </and>
      </condition>
      <volume>
        <factor>0.7</factor>
      </volume>
      <reference-dist>100</reference-dist>
      <max-dist>2000</max-dist>
    </engine>
    
    <engine>
      <name>Shutdown internal</name>
      <mode>once</mode>
      <path>Aircraft/MI-6PS/Sound/turbine-stop.wav</path>
      <condition>
        <and>
          <equals>
            <property>sim/multiplay/generic/int[4]</property>
            <value>0</value>
          </equals>
	  <greater-than>
            <property>rotors/main/rpm</property>
            <value>96</value>
          </greater-than>
          <equals>
          <property>/sim/current-view/internal</property>
	  <value>true</value>
          </equals>
        </and>
      </condition>
      <volume>
        <factor>0.12</factor>
      </volume>
      <reference-dist>50</reference-dist>
      <max-dist>200</max-dist>
    </engine>
    
    <rotor>
      <name>Rotor external</name>
      <mode>looped</mode>
      <path>Aircraft/MI-6PS/Sound/rotor-loop.wav</path>
      <condition>
        <and>
          <equals>
            <property>sim/multiplay/generic/int[4]</property>
            <value>5</value>
          </equals>
          <equals>
          <property>/sim/current-view/internal</property>
	  <value>false</value>
          </equals>
        </and>
      </condition>
      <volume>
        <factor>0.6</factor>
      </volume>
      <pitch>
        <property>rotors/main/rpm</property>
        <factor>0.00283</factor>
        <offset>-0.0</offset>
        <max>2.5</max>
      </pitch>
      <position>
        <x> -2 </x>
        <y>  0 </y>
        <z>  1 </z>
      </position>
      <reference-dist>100</reference-dist>
      <max-dist>18000</max-dist>
    </rotor>
    
    <rotor>
      <name>Rotor internal</name>
      <mode>looped</mode>
      <path>Aircraft/MI-6PS/Sound/rotor-loop.wav</path>
      <condition>
        <and>
          <equals>
            <property>sim/multiplay/generic/int[4]</property>
            <value>5</value>
          </equals>
          <equals>
          <property>/sim/current-view/internal</property>
	  <value>true</value>
          </equals>
        </and>
      </condition>
      <volume>
        <factor>0.15</factor>
      </volume>
      <pitch>
        <property>rotors/main/rpm</property>
        <factor>0.004255</factor>
        <offset>-0.0</offset>
        <max>2.5</max>
      </pitch>
      <reference-dist>100</reference-dist>
      <max-dist>10000</max-dist>
    </rotor>
    
    <contact>
      <name>ground contact</name>
      <mode>once</mode>
      <path>Aircraft/MI-6PS/Sound/wheel.wav</path>
      <condition>
        <property>sim/multiplay/generic/int[0]</property>
      </condition>
      <volume>
        <factor>0.4</factor>
      </volume>
      <pitch>
        <factor>0.01</factor>
      </pitch>
      <reference-dist>5.0</reference-dist>
      <max-dist>2000.0</max-dist>
    </contact>
    
    <crash>
      <name>intense ground contact</name>
      <mode>once</mode>
      <path>Sounds/crash.wav</path>
      <property>sim/crashed</property>
      <volume>
        <factor>0.6</factor>
      </volume>
      <pitch>
        <factor>0.1</factor>
      </pitch>
    </crash>
    
    <Elephant>
      <name>Elephant</name>
      <mode>once</mode>
      <path>Aircraft/MI-6PS/Sound/Elephant.wav</path>
      <property>sim/multiplay/generic/int[3]</property>
      <volume>
        <factor>1.0</factor>
      </volume>
      <max-dist>5000.0</max-dist>
    </Elephant>

</fx>
</PropertyList>
