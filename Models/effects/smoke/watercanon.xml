<PropertyList>
  
  <!-- from Volvo Deicing Truck - LOWI Version   -->
  <!-- 2012.11.04 - V0.85a by Oliver Thurau
  modified by HerbyW 10-2015-->
  
  <path>watercanon2.ac</path>
  
  
  <animation>
    <object-name>light</object-name>
    <object-name>lift</object-name>
    <object-name>arm</object-name>
    <object-name>up</object-name>
    <object-name>down</object-name>
    <object-name>right</object-name>
    <object-name>left</object-name>
    <object-name>on-out</object-name>
    <object-name>water</object-name>
  </animation>
  
  <model>
    <name>water</name>
    <path>water-smoke.xml</path>    
    <offsets>
      <x-m>0.05</x-m>
      <y-m>0.0</y-m>
      <z-m>0.0</z-m>
    </offsets>
  </model>
  
  
  
  <!-- Lights night illumination -->
  <animation>
    <type>material</type>
    <object-name>lift</object-name>
    <object-name>arm</object-name>    
    <condition>
      <greater-than>
	<property>/sim/time/sun-angle-rad</property>
	<value>1.45</value>
      </greater-than>
      
      </condition>
      <emission>	
	<red>0.1</red>	
	<green>0.1</green>	
	<blue>0.1</blue>
      </emission>
    </animation>
    
    <animation>
    <type>material</type>    
    <object-name>up</object-name>
    <object-name>down</object-name>
    <object-name>right</object-name>
    <object-name>left</object-name>       
      <emission>	
	<red>0</red>	
	<green>0</green>	
	<blue>1</blue>
      </emission>
    </animation>
    
    <animation>
    <type>material</type>        
    <object-name>on-out</object-name>    
      <emission>	
	<red>1</red>	
	<green>0</green>	
	<blue>0</blue>
      </emission>
    </animation>
    
    <!-- Lights_deicing lamp glass illumination -->
    <animation>
      <type>material</type> 
      <object-name>light</object-name>
      <condition>
	<greater-than>
	  <property>/sim/time/sun-angle-rad</property>
	  <value>1.45</value>
	</greater-than>	
	</condition>
	<emission>	
	  <red>0.1</red>	
	  <green>0.1</green>	
	  <blue>0.1</blue>
	</emission>
      </animation>
      
      <!-- Water On-Out
      
      <animation>
	<type>pick</type>
	<object-name>on-out</object-name>
	<action>
	  <button>0</button>
	  <binding>
	    <command>property-toggle</command>
	    <property>sim/multiplay/generic/int[1]</property>	
	  </binding>
	  <binding>
	    <command>property-assign</command>
	    <property>sim/multiplay/generic/int[6]</property>
	    <value>8</value>	
	  </binding>  
	  <binding>
	    <command>property-assign</command>
