<PropertyList>

	<particlesystem>
	  
	  <condition>    
           <property>sim/multiplay/generic/int[1]</property>      
          </condition>
		<name>water_particle</name>
		
		<texture>water.png</texture>
		<emissive>true</emissive>
		<lighting>true</lighting>
		<align>billboard</align>
		<attach>world</attach>   
		<placer>
			<type>point</type>
		</placer>
		
		<shooter>
			<theta-min-deg>90</theta-min-deg>
			<theta-max-deg>90</theta-max-deg>
			<phi-min-deg>-0</phi-min-deg>
			<phi-max-deg>0</phi-max-deg>
			<speed-mps>
				<value>200</value>
				<spread>0</spread>
			</speed-mps>
		</shooter>
		
		<counter>
			<particles-per-sec>
				<value>35</value>
				<spread>0</spread>
			</particles-per-sec>
		</counter>
		
		<particle>
			<start>
				<color>
					<red><value>1</value></red>
					<green><value>1</value></green>
					<blue><value>1</value></blue>
					<alpha><value>1</value></alpha>
				</color>
				<size>
					<value>0.05</value>
				</size>
			</start>
			
			<end>
				<color>
					<red><value>1</value></red>
					<green><value>1</value></green>
					<blue><value>1</value></blue>
					<alpha><value>0.75</value></alpha>
				</color>
				<size>
					<value>12</value>
					<spread>0</spread>
				</size>
			</end>
			
			<life-sec>
				<value>5</value>
			</life-sec>
			
			<mass-kg>0.35</mass-kg>
			<radius-m>0.05</radius-m>
		</particle>
		
		<program>
			<fluid>air</fluid>
			<gravity>true</gravity>
			<wind>true</wind>
		</program>
		
	</particlesystem>

</PropertyList>
