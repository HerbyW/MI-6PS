<PropertyList>
  
  <path>tow-elephant.ac</path>
  
 
  
  <animation>
    <type>select</type>	  
    <condition>
      <and>      
      <equals>
	<property>sim/multiplay/generic/int[3]</property>
	<value>1</value>
      </equals>
      <greater-than>
	<property>sim/multiplay/generic/float[12]</property>
	<value>25.0001</value>
      </greater-than>
      </and>
    </condition>
  </animation>
  
  <animation>
    <type>rotate</type>        
    <property>orientation/roll-deg</property>
    <factor>-1</factor>
    <center>
      <x-m>0</x-m>
      <y-m>0</y-m>
      <z-m>27</z-m>
    </center>
    <axis>
      <x>0</x>
      <y>-1</y>
      <z>0</z>
    </axis>
  </animation> 
  
  <animation>
    <type>rotate</type>        
    <property>orientation/pitch-deg</property>
    <factor>-1</factor>
    <center>
      <x-m>0</x-m>
      <y-m>0</y-m>
      <z-m>27</z-m>
    </center>
    <axis>
      <x>-1</x>
      <y>0</y>
      <z>0</z>
    </axis>
    </animation>
  
 


  
  </PropertyList>
      