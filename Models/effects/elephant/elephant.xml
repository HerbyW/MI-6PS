<PropertyList>
  
  <path>elephant3.ac</path>
  
 
  
  <animation>
    <type>select</type>	  
    <condition>      
      <and>      
      <equals>
	<property>sim/multiplay/generic/int[3]</property>
	<value>1</value>
      </equals>
      <less-than>
	<property>sim/multiplay/generic/float[12]</property>
	<value>25</value>
      </less-than>
      </and>
    </condition>
  </animation>
  
  
  
    <!-- +right -left -->
  <animation>
    <type>translate</type>    
    <property>sim/multiplay/generic/int[3]</property>
    <interpolation>
      <entry><ind> 0.0 </ind><dep> 0.0 </dep></entry>
      
      <entry><ind> 1.0 </ind><dep> 0.0 </dep></entry>
    </interpolation>
    <axis>
      <x>-1 </x>
      <y> 0 </y>
      <z> 0 </z>
    </axis>
  </animation>

  <!-- +down -up -->
 <animation>
    <type>translate</type>    
    <property>sim/multiplay/generic/int[3]</property>
    <interpolation>
      <entry><ind> 0.0 </ind><dep> 0.0 </dep></entry>
      
      <entry><ind> 1.0 </ind><dep>  15.53 </dep></entry>
    </interpolation>
    <axis>
      <x> 0 </x>
      <y> 0 </y>
      <z>-1 </z>
    </axis>
  </animation>
  
    <!-- +forward -backward -->
 <animation>
    <type>translate</type>    
    <property>sim/multiplay/generic/int[3]</property>
    <interpolation>
      <entry><ind> 0.0 </ind><dep> 0.0 </dep></entry>
      
      <entry><ind> 1.0 </ind><dep> 41.50 </dep></entry>
    </interpolation>
    <axis>
      <x> 0 </x>
      <y>-1 </y>
      <z> 0 </z>
    </axis>
  </animation>

    <!-- +down -up at ground and start up-->
 <animation>
    <type>translate</type>    
    <property>sim/multiplay/generic/float[12]</property>
    <interpolation>
      <entry><ind> 0.0 </ind><dep> -15.53 </dep></entry>
      <entry><ind> 5.0 </ind><dep> -11.03 </dep></entry>
      <entry><ind> 16.0 </ind><dep>  0 </dep></entry>
      <entry><ind> 26.0 </ind><dep>  10 </dep></entry>
    </interpolation>
    <axis>
      <x> 0 </x>
      <y> 0 </y>
      <z>-1 </z>
    </axis>
  </animation>
  
    <!-- +forward -backward at ground and start up-->
 <animation>
    <type>translate</type>    
    <property>sim/multiplay/generic/float[12]</property>
    <interpolation>
      <entry><ind> 0.0 </ind><dep> -43.50 </dep></entry>
      <entry><ind> 5.0 </ind><dep> -43.50 </dep></entry>
      <entry><ind> 16.0 </ind><dep> 0 </dep></entry>
    </interpolation>
    <axis>
      <x> 0 </x>
      <y>-1 </y>
      <z> 0 </z>
    </axis>
  </animation>

  
  </PropertyList>
      