  <center>
    <x-m>-7.556</x-m>
    <y-m>0.000613</y-m>
    <z-m>2.537</z-m>
  </center>
  <axis>
    <x>-1</x>
    <y>0</y>
    <z>0</z>
  </axis>
</animation>

</PropertyList> 
