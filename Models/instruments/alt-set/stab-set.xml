<PropertyList>
 <path>stab-set.ac</path>

 <!--External panel lighting-->
<animation>
  <type>material</type>   
  <object-name>pitch_wheel</object-name>
  <object-name>pitch_nandle_base</object-name>  
    <emission>
      <factor-prop>controls/switches/gauge-light</factor-prop>
      <red>   0.35 </red>
      <green> 0.35 </green>
      <blue>  0.35 </blue>
    </emission>
</animation>

<!--Autopilot wheels-->
<animation>
  <type>rotate</type>
  <object-name>pitch_wheel</object-name>
  <property>/controls/flight/stab</property>
  <center>
    <x-m>0.0</x-m>
    <y-m>0.0</y-m>
    <z-m>-0.14988</z-m>
  </center>
  <axis>
    <x>0.0</x>
    <y>1.0</y>
    <z>0.0</z>
  </axis>
</animation>

<!--Wheels-->

<animation>
  <type>pick</type>
  <object-name>pitch_wheel</object-name>
  <action>
    <button>0</button>
    <repeatable>true</repeatable>
    <interval-sec>0.1</interval-sec>
    
    <binding>
      <command>property-adjust</command>
      <property>/controls/flight/stab</property>
      <step>-0.005</step>
      <min>-0.3</min>
      <max>0.3</max>
      <wrap>false</wrap>
    </binding>	    
  </action>
  <hovered>
      <binding>
	<command>set-tooltip</command>
	<tooltip-id>Stab-Pitch</tooltip-id>
	<label>StabControl: %4.3f</label>
	<property>/controls/flight/stab</property>	
      </binding>
    </hovered>
</animation>

