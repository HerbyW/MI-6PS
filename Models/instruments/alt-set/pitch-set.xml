<PropertyList>
 <path>pitch-set.ac</path>

 <!--External panel lighting-->
<animation>
  <type>material</type>   
  <object-name>pitch_wheel</object-name>
  <object-name>pitch_nandle_base</object-name>  
    <emission>
      <factor-prop>controls/switches/gauge-light</factor-prop>
      <red>   0.35 </red>
      <green> 0.35 </green>
      <blue>  0.35 </blue>
    </emission>
</animation>

<!--Autopilot wheels-->
<animation>
  <type>rotate</type>
  <object-name>pitch_wheel</object-name>
  <property>autopilot/settings/vertical-speed-fpm</property>
  <center>
    <x-m>0.0</x-m>
    <y-m>0.0</y-m>
    <z-m>-0.14988</z-m>
  </center>
  <axis>
    <x>0.0</x>
    <y>1.0</y>
    <z>0.0</z>
  </axis>
</animation>

<!--Wheels-->

<animation>
  <type>pick</type>
  <object-name>pitch_wheel</object-name>
  <visible>true</visible>
  <action>
    <button>0</button>
    <binding>
      <command>property-assign</command>
      <property>/autopilot/settings/vertical-speed-fpm</property>
      <value>0.0</value>
    </binding> 
  </action>
</animation>

<animation>
  <type>pick</type>
  <object-name>pitch_wheel</object-name>
  <visible>true</visible>
  <action>
    <button>3</button>
    <repeatable>true</repeatable>
    <binding>
       <command>nasal</command>
       <script>mi6.adjustPitch(-100,100);</script>
     </binding>  
  </action>
</animation>

<animation>
  <type>pick</type>
  <object-name>pitch_wheel</object-name>
  <visible>true</visible>
  <action>
    <button>4</button>
    <repeatable>true</repeatable>
    <binding>
       <command>nasal</command>
       <script>mi6.adjustPitch(100,100);</script>
     </binding>    
  </action>
</animation>

</PropertyList>
