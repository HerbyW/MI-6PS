<!--show variation by hoovering the mouse to the center -->

<animation>
  <type>pick</type>
  <object-name>hs</object-name>
  <visible>false</visible>   
    <hovered>
    <binding>
      <command>set-tooltip</command>
      <tooltip-id>Variation-is</tooltip-id>
      <label>Magnetic Variation: %5.2f</label>
