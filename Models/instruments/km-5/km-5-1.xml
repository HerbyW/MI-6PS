<!-- KM-5 gauge from TKS compass system
3D instrument for Tu-154 -->

<PropertyList>
  
 <path>km-5.ac</path>
 
<!-- Internal instruments lighting -->

<animation>
  <type>material</type>
  <object-name>text</object-name>
  <object-name>needle</object-name>
  <object-name>index</object-name>
  <object-name>handle_2</object-name>    
</animation>


  <!-- working for Rembrandt -->
  

  <animation>
    <type>material</type>
     <object-name>text</object-name>
     <object-name>needle</object-name>
     <object-name>handle_2</object-name>     
    <emission>
      <factor-prop>controls/switches/gauge-light</factor-prop>
      <red>   0.35 </red>
      <green> 0.35 </green>
      <blue>  0.35 </blue>
    </emission>
  </animation>

  <animation>
    <type>material</type>
     
     <object-name>index</object-name>  
    <emission>
      <factor-prop>controls/switches/gauge-light</factor-prop>
      <red>   1 </red>
      <green> 0.5 </green>
      <blue>  0 </blue>
    </emission>
  </animation>
  
  
<!--Needles-->
<animation>
    <type>rotate</type>
    <object-name>needle</object-name>
    <property>instrumentation/magnetic-compass/pitch-offset-deg</property>
    <axis>
      <x>1.0</x>
      <y>0.0</y>
      <z>0.0</z>
    </axis>
</animation>

<animation>
  <type>rotate</type>
  <object-name>index</object-name>
  <property>environment/magnetic-variation-deg</property>
  <axis>
    <x>-1.0</x>
    <y>0.0</y>
    <z>0.0</z>
  </axis>  
</animation>

<animation>
  <type>rotate</type>
  <object-name>handle_2</object-name>
  <property>instrumentation/magnetic-compass/pitch-offset-deg</property>
  <factor>50</factor>
  <axis>
    <x>-1.0</x>
    <y>0.0</y>
    <z>0.0</z>
  </axis>
  <center>
     <x-m> 0.0</x-m>
     <y-m> 0.03735</y-m>
     <z-m> -0.05057</z-m>
   </center>  
</animation>

<animation>
  <type>pick</type>
  <object-name>handle_2</object-name>
  <visible>true</visible>
  <action>
    <button>0</button>
    <repeatable>true</repeatable>
    <interval-sec>0.15</interval-sec>
    <binding>
      <command>property-adjust</command>
      <property>instrumentation/magnetic-compass/pitch-offset-deg</property>
      <step>0.5</step>
      <min>-180.0</min>
      <max>180.0</max>
      <wrap>false</wrap>
    </binding>    
   </action>    
  <hovered>
    <binding>
      <command>set-tooltip</command>
      <tooltip-id>Variation</tooltip-id>
      <label>Variation set to: %5.2f</label>
      <property>instrumentation/magnetic-compass/pitch-offset-deg</property>      
    </binding>
  </hovered>  
  
</animation>

<animation>
  <type>pick</type>
  <object-name>handle_2</object-name>
  <visible>true</visible>
  <action>
    <button>0</button>
    <repeatable>true</repeatable>
    <interval-sec>0.15</interval-sec>
    <binding>
