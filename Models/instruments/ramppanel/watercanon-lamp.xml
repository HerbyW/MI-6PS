<!-- Red lamp
3D instrument for Tu-154 -->
<PropertyList>
 <path>red_lamp.ac</path>
<!--External panel lighting-->
<animation>
  <type>material</type>
  <object-name>_c_1</object-name>
  <object-name>_c_2</object-name>
  <emission>
      <factor-prop>controls/switches/gauge-light</factor-prop>
      <red>   0.35 </red>
      <green> 0.35 </green>
      <blue>  0.35 </blue>
    </emission>
</animation>
<!--Brightness-->
<animation>
  <type>material</type>
  <object-name>_d_2</object-name>
  <emission>
      <factor-prop>controls/switches/gauge-light</factor-prop>
      <red>   1 </red>
      <green> 1 </green>
      <blue>  1 </blue>
    </emission>
</animation>

<!--Set-->
<animation>
  <type>select</type>
  <object-name>_d_2</object-name>
  <condition>    
     <property>sim/multiplay/generic/int[1]</property>
  </condition>
</animation>

<animation>
  <type>pick</type>
  <object-name>_d_2</object-name>
  <object-name>_c_1</object-name>
  <object-name>_c_2</object-name>
  <visible>true</visible>
  <action>
    <button>0</button>
    <repeatable>false</repeatable>    
    <binding>
	    <command>property-toggle</command>
	    <property>sim/multiplay/generic/int[1]</property>	
	  </binding>
	  <binding>
	    <command>property-assign</command>
	    <property>sim/multiplay/generic/int[6]</property>
	    <value>8</value>	
	  </binding>  
	  <binding>
	    <command>property-assign</command>
	    <property>sim/multiplay/generic/int[7]</property>
	    <value>0</value>	
	  </binding>    
  </action>
</animation>

<animation>
  <type>scale</type>
  <object-name>_d_2</object-name>
  <object-name>_d_1</object-name>
  <object-name>_c_1</object-name>
  <object-name>_c_2</object-name>
    <object-name>switch</object-name>
  <property>sim/signals/fdm-initialized</property>
  <offset>1</offset>
  <x-max>2</x-max>
  <y-max>2</y-max>
  <z-max>2</z-max>
  <x-factor>2</x-factor>
  <y-factor>2</y-factor>
  <z-factor>2</z-factor>
 </animation>

</PropertyList>
