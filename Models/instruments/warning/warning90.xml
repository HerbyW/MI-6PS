<!-- indicators on captain panel
3D instrument for Tu-154 -->
<PropertyList>
 <path>warning90.ac</path>
 
  <!-- Internal instruments lighting -->

  <effect>
 <inherits-from>Effects/model-transparent</inherits-from>
  <object-name>cover</object-name>
</effect>
  
  <animation>
    <type>material</type>
    <object-name>cover</object-name>    
    
    <emission>
      <factor-prop>controls/switches/gauge-light</factor-prop>
      <red>   0.35 </red>
      <green> 0.35 </green>
      <blue>  0.35 </blue>
    </emission>
  </animation>
   
<!--Indicators 90 Floating Control-->


<animation>
  <type>material</type>
  <object-name>text</object-name>
  <condition>
      <equals>
	<property>/autopilot/locks/altitude</property>
	<value>gleiten</value>
      </equals>
   </condition>  
  <emission>
    <red>1.0</red>
    <green>1.0</green>
    <blue>1.0</blue>    
  </emission>
</animation>

<animation>
  <type>pick</type>
  <object-name>text</object-name>
  <visible>true</visible>
  <action>
    <button>0</button>
    <repeatable>false</repeatable>
    <binding>
      <command>property-assign</command>
      <property>/controls/flight/floating-pitch</property>
      <value>0.0</value>
    </binding>
    <binding>
      <command>property-assign</command>
      <property>/autopilot/locks/speed</property>
      <value></value>
    </binding>
    <binding>
      <command>property-assign</command>
      <property>/autopilot/locks/collective</property>
      <value>0</value>
    </binding>
    <binding>
      <command>property-assign</command>
      <property>/autopilot/locks/heading</property>
      <value type="string">wing-leveler</value>
    </binding>
    <binding>
      <command>property-assign</command>
      <property>/autopilot/internal/target-roll-deg-wl</property>
      <value type="double"> 0 </value>
    </binding>
    <binding>
      <command>property-assign</command>
      <property>/autopilot/locks/altitude</property>
      <value type="string"></value>
    </binding>
  </action>
</animation>

</PropertyList>